"VertexlitGeneric"
{
	"$baseTexture" "models/player/items/all_class/xcom_flattop"
	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"
	"$bumpmap" "models/player/items/all_class/xcom_flattop_normal"

//	"$basemapalphaphongmask" "1"


	"$detailscale" "5"
	"$detailblendfactor" .01
	"$detailblendmode" 6

	"$yellow" "0"
	"$one" "1"

	"$phong" "1"
	"$phongexponent" "10"
	"$phongboost" "1"	
	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"
	"$phongfresnelranges"	"[.3 1 8]"
	"$halflambert" "0"

 	"$blendtintbybasealpha" "0" 
	"$blendtintcoloroverbase" "0"  

	"$color2" "{213 166 53}"
	"$colortint_base" "{213 166 53}"
	"$colortint_tmp" "[0 0 0]" 

	"$rimlight" "1"												// To enable rim lighting (requires phong)
	"$rimlightexponent" "25"										// Exponent for phong component of rim lighting	
	"$rimlightboost" ".5"										// Boost for ambient cube component of rim lighting

	// Cloaking
	

	"360?$color2" "[ 0.7 0.7 0.7 ]"
	"Proxies"
	{
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"ItemTintColor"
		{
			"resultVar" "$colortint_tmp"
		}
		"SelectFirstIfNonZero"
		{
			"srcVar1"	"$colortint_tmp"
			"srcVar2"	"$colortint_base"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}