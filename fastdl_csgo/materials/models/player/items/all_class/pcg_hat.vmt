"VertexlitGeneric"
{
	"$baseTexture" "models/player/items/all_class/pcg_hat"
	"$bumpmap" "models/player/items/all_class/pcg_hat_phongmask"
	
	"$yellow" "0"

	"$blendtintbybasealpha" "1" 
	"$blendtintcoloroverbase" "0"   // between 0-1 determines how much blended by tinting vs. replacing the color

	"$colortint_base" "{175 136 92}"  // put the RGB value of whats being colored when no paint is present, if $blendtintcoloroverbase is 0 then put [1 1 1] here.
	"$colortint_tmp" "[0 0 0]"

	"$phong" "1"
	"$phongexponent" "20"
	"$phongboost" "2"
	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"
	"$phongfresnelranges"	"[.25 1 4]"

	// Rim lighting parameters
	"$rimlight" "1"												// To enable rim lighting (requires phong)
	"$rimlightexponent" "2"										// Exponent for phong component of rim lighting	
	"$rimlightboost" "0.35"

	// Cloaking
	
	"Proxies"
	{
		"invis"
		{
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"ItemTintColor"
		{
			"resultVar" "$colortint_tmp"
		}
		"SelectFirstIfNonZero"
		{
			"srcVar1"	"$colortint_tmp"
			"srcVar2"	"$colortint_base"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}